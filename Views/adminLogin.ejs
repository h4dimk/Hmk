<%- include('header') %>

<div class="main-admin-login">
  <div class="container pt-5">
    <div class="row align-items-center" style="min-height: 93.5vh">
      <div class="col-md-6 mx-auto">
        <div class="card shadow-lg">
          <div class="card-header admin-login">
            <h3>Admin Login</h3>
          </div>
          <div class="card-body">
            <% if (locals.error) { %>
            <p class="error-message"><%= error %></p>
            <% } %>
            <form action="/admin/login" method="post">
              <div class="mb-3">
                <label for="username" class="form-label">Username:</label>
                <input
                  type="text"
                  class="form-control"
                  id="username"
                  name="username"
                />
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                />
              </div>
              <button type="submit" class="btn admin-login">Login</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('footer') %>
