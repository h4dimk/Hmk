<%- include('header') %>

<div class="user-signup">
  <div class="row align-items-center container" style="min-height: 100vh">
    <div class="col-md-6">
      <img
        src="/images/SignUpImg.jpeg"
        class="img-fluid"
        alt="Your Image"
        style="margin-left: 5rem"
      />
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3>Sign Up</h3>
        </div>
        <div class="card-body">
          <% if (locals.error) { %>
          <p class="error-message"><%= error %></p>
          <% } %>
          <form action="/user/signup" method="post">
            <div class="mb-3">
              <label for="username" class="form-label">Username:</label>
              <input
                type="text"
                class="form-control"
                id="username"
                name="username"
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email:</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
              />
            </div>
            <div class="mb-3">
              <label for="phonenumber" class="form-label">Phone Number:</label>
              <input
                type="tel"
                class="form-control"
                id="phonenumber"
                name="phonenumber"
              />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password:</label>
              <div class="input-group">
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                />
                <div class="input-group-append">
                  <button
                    type="button"
                    class="btn btn-outline-secondary"
                    id="togglePassword"
                  >
                    Show
                  </button>
                </div>
              </div>
            </div>
            <div class="mb-3">
              <label for="confirmPassword" class="form-label"
                >Confirm Password:</label
              >
              <div class="input-group">
                <input
                  type="password"
                  class="form-control"
                  id="confirmPassword"
                  name="confirmPassword"
                />
                <div class="input-group-append">
                  <button
                    type="button"
                    class="btn btn-outline-secondary"
                    id="toggleConfrimPassword"
                  >
                    Show
                  </button>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const passwordInput = document.getElementById("password");
  const confirmPasswordInput = document.getElementById("confirmPassword");
  const togglePasswordButton = document.getElementById("togglePassword");
  const toggleConfirmPasswordButton = document.getElementById(
    "toggleConfrimPassword"
  );

  togglePasswordButton.addEventListener("click", function () {
    if (passwordInput.type === "password") {
      passwordInput.type = "text";
      togglePasswordButton.textContent = "Hide";
    } else {
      passwordInput.type = "password";
      togglePasswordButton.textContent = "Show";
    }
  });

  toggleConfrimPassword.addEventListener("click", function () {
    if (confirmPasswordInput.type === "password") {
      confirmPasswordInput.type = "text";
      toggleConfrimPassword.textContent = "Hide";
    } else {
      confirmPasswordInput.type = "password";
      toggleConfrimPassword.textContent = "Show";
    }
  });
</script>

<%- include('footer') %>
