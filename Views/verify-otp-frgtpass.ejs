<%- include('header') %>

<div class="container pt-5">
    <div class="row justify-content-center align-items-center custom-row">
        <div class="col-md-6">
            <div class="card">
                
                <div class="card-header">
                    <h3>Enter OTP</h3>
                </div>
                <div class="card-body">
                    <% if (locals.error) { %>
                        <p class="error-message"><%= error %></p>
                      <% } %>
                    <form action="/user/forgot-password/verify" method="post">
                        <div class="mb-3">
                            <label for="otp" class="form-label">OTP:</label>
                            <input type="text" class="form-control" id="otp" name="otp" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit OTP</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>
