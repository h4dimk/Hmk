<%- include('header') %> <%- include('adminlayout') %>

<div id="content" class="">
  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container-fluid">
      <h2>Edit Product</h2>
    </div>
  </nav>

  <!-- Edit Product Form -->
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Start of the form for editing a product -->
      <form
        action="/admin/products/edit/<%= product._id %>"
        method="POST"
        enctype="multipart/form-data"
      >
        <!-- Existing fields for product details -->
        <div class="mb-3">
          <% if (locals.error) { %>
          <p class="error-message"><%= error %></p>
          <% } %>
          <label for="name" class="form-label">Product Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="<%= product.name %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            class="form-control"
            id="description"
            name="description"
            rows="4"
            required
          >
<%= product.description %></textarea
          >
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            class="form-control"
            id="price"
            name="price"
            value="<%= product.price %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <select class="form-select" id="category" name="category" required>
            <% categories.forEach(category => { if(category.islisted){%>
            <option value="<%= category.name %>"><%= category.name %></option>
            <%}})%>
          </select>
        </div>

        <!-- Add a file input field for image upload -->
        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image</label>
          <input
            type="file"
            class="form-control"
            id="image"
            name="images"
            multiple
          />
          <p class="text-muted">
            Leave this field empty to keep the current image.
          </p>
        </div>

        <button type="submit" class="btn btn-primary">Update Product</button>
      </form>
      <!-- End of the form for editing a product -->
    </div>
  </div>

  <%- include('footer') %>
</div>
